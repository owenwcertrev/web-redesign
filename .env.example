# Crisp Chat Widget (Optional)
# Get your Website ID from https://app.crisp.chat/settings/websites/
NEXT_PUBLIC_CRISP_WEBSITE_ID=your_crisp_website_id_here

# Resend Email Service
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# E-E-A-T Meter API
# DataForSEO API - Get your credentials from https://dataforseo.com/apis
# Sign up at https://app.dataforseo.com/register
# Cost: $0.04-0.06 per analysis (vs $0.52 with Semrush+Moz)
DATAFORSEO_LOGIN=your_dataforseo_email_here
DATAFORSEO_PASSWORD=your_dataforseo_password_here

# OpenAI API (for LLM-enhanced E-E-A-T scoring)
# Get your API key from https://platform.openai.com/api-keys
# Uses GPT-4 for context-aware metric analysis
# Cost: ~$0.002-0.005 per metric analysis
# Optional - E-E-A-T Meter will work without it using regex fallback
OPENAI_API_KEY=your_openai_api_key_here

# Enable LLM-enhanced scoring (requires OPENAI_API_KEY)
# Set to 'true' to use GPT-4 for deeper analysis alongside regex detection
# LLM provides context-aware credential detection across all verticals
# Fallback to regex if LLM fails or times out
ENABLE_LLM_SCORING=false

# Brave Search API (for author reputation checking)
# Get your API key from https://brave.com/search/api/
# Free tier: 2,000 queries/month
# Optional - E-E-A-T Meter will work without it but won't check author reputation
BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here

# SerpAPI (alternative to Brave Search for author reputation checking)
# Get your API key from https://serpapi.com/manage-api-key
# Paid service - use Brave Search for free tier
# Optional - only needed if not using Brave Search API
SERPAPI_KEY=your_serpapi_key_here

# Supabase (optional - for caching and data storage)
# Get your credentials from https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# PostHog Analytics (optional - for user behavior tracking)
# Get your credentials from https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_api_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry Error Tracking (optional - for error monitoring)
# Get your DSN from https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
